@using Architecture.Web.Code

@{
    ViewBag.Title = "Create";
}
@Html.AntiForgeryToken()
<h2>Create</h2>

<div class="form-group">
    <label>Date:</label>
    <input type="date" data-bind="value: createOrder().date" class="form-control" required="required">
</div>
<div class="form-group">
    <label>Customer:</label>
    <p class="form-control-static" data-bind="text: createOrder().customerName"></p>
</div>


<button data-bind="click: create">Create</button>

@section scripts
{
    @Scripts.Render(@ScriptHelper.GetViewSpecificScripts(ViewContext))
}
